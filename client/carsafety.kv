<MainScreen>
    status_label: status
    error_label: error
    ip_entry: ip

    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 50
        spacing: 30

        GridLayout:
            cols: 1

            GridLayout:
                cols: 1
                spacing: 30

                Label:
                    text: "Car Safety App"
                    font_size: 30
                    bold: True

                Label:
                    text: "This app will tell you if you forgot your child in the car.\nEnter the IP address of the helper device and click\nthe connect button to connect to the it."
                    halign: "center"
                    font_size: 18

                Label:
                    id: status
                    text: "Not Connected"
                    color: "#FF0000"
                    font_size: 18

                Label:
                    id: error
                    text: ""
                    font_size: 18

            TextInput:
                id: ip
                hint_text: "IP Address of helper device"
                multiline: False

        Button:
            text: "Connect"
            size_hint: 0.5, 0.4
            on_press: root.connect_btn()
