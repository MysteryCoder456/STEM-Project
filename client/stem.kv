<MainGrid>
    status_label: status
    ip_entry: ip

    GridLayout:
        cols: 1
        size: root.width, root.height
        padding: 50
        spacing: 30

        GridLayout:
            cols: 1

            GridLayout:
                cols: 1

                Label:
                    text: "STEM App"

                Label:
                    id: status
                    text: "Not Connected"
                    color: "#FF0000"

            TextInput:
                id: ip
                multiline: False

        Button:
            text: "Connect"
            on_press: root.connect_btn()
